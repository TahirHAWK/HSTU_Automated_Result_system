<html lang="en">
    <%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar.ejs') %>

  
  <div class="main">

    


    <h3>Welcome to Teachers Dashboard</h3>
    <h2><%= registerName %></h2>

    <div class="card_holder">
        
      <% AssignedCourses.forEach((course) => { %>
        
        <div class="card text-center" id="<%= course.assignedTeacherID %>">
        <div class="card-header"><%= course.course_title %></div>
        <div class="card-body">
          <h5 class="card-title">Credits: <%= course.credit %></h5>
          <p class="card-text">
            Degree: <%= course.degree %> <br> <%= course.levelSemester %> <br> Course Code: <%= course.course_code %> <br> 
          </p>
           
     
        <% if(course.finalSubmission == false){ %>
          <a href="/courses/grading/<%= course.course_code %>/<%= course.credit %>" class="btn btn-outline-secondary">Assign Grades</a>
         
        </div>    
       
        <div class="card-footer p-3 mb-2 bg-secondary text-white">Final Submit: Due for submission </div>
        <% } else { %>
          <a href="/courses/grading/<%= course.course_code %>/<%= course.credit %>" class="btn btn-outline-success">Audit Grades</a>
         
        </div>    
       
        <div class="card-footer p-3 mb-2 bg-success text-white">Final Submit: Done </div>
          <% } %>
      </div>
 
 
      <% }) %>
    
  </div>
  </div>
  <%- include('./partials/footer.ejs') %>
</body>
</html>